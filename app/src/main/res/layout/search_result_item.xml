<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elev"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_marginRight="@dimen/proj_margin"
    android:layout_marginLeft="@dimen/proj_margin"
    android:layout_marginTop="@dimen/double_small_margin"
    android:layout_marginBottom="@dimen/double_small_margin"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="true">


    <TextView
        android:id="@+id/resultRepoNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/proj_tv_margin"
        android:text="@string/repo_name"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/addToProjectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/medium_margin"
        app:srcCompat="@drawable/icon_bookmark_small" />

</androidx.cardview.widget.CardView>
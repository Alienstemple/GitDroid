<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.fragments.HelloFragment">

    <TextView
        android:id="@+id/welcomeTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_layout_height"
        android:layout_marginTop="@dimen/hello_top_margin"
        android:gravity="center"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:text="@string/welcome_to_gitdroid"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/userAvatarImg"
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/big_icon_size"
        android:layout_gravity="center"
        android:src="@drawable/icon_github" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hello_top_margin"
        android:layout_marginRight="@dimen/hello_top_margin"
        android:backgroundTint="@color/white"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="@dimen/medium_padding"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/black"
        android:text="@string/search" />

    <Button
        android:id="@+id/myProjBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hello_top_margin"
        android:layout_marginRight="@dimen/hello_top_margin"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/icon_bookmark_small"
        android:drawablePadding="@dimen/medium_padding"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/black"
        android:text="@string/my_projects" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hello_top_margin"
        android:layout_marginRight="@dimen/hello_top_margin"
        android:backgroundTint="@color/white"
        android:drawableStart="@android:drawable/ic_menu_revert"
        android:drawablePadding="@dimen/medium_padding"
        android:padding="@dimen/medium_padding"
        android:text="@string/logout"
        android:textColor="@color/black" />

</LinearLayout>